<h class="text-center">部门列表</h1>

<table class="table table-striped table-condensed">
  <thead>
    <tr>
      <th>部门名称</th>
      <th>是否有效</th>
      <th>显示顺序</th>
      <th>主管领导</th>
      <th>操作</th>
    </tr>
  </thead>

  <tbody>
    <% @departments.each do |department| %>
      <tr>
        <td><%= department.name %></td>
        <td><%= department.is_valid ? "是" : "否" %></td>
        <td><%= department.display_order %></td>
        <td><%= department.head.nil? ? "<未设置>": department.head.name %></td>
        <td><%= link_to '更改信息', edit_department_path(department) , class: "btn active btn-primary btn-sm" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to '创建部门', new_department_path , class: "btn btn-primary btn-default active" %>
