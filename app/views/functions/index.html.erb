<h1 class="text-center">功能点列表</h1>

<table  class="table table-striped table-condensed">
  <thead>
    <tr>
      <th>Name</th>
      <th>Controller</th>
      <th>Action</th>
      <th>Description</th>
      <th>操作</th>
    </tr>
  </thead>

  <tbody>
    <% @functions.each do |function| %>
      <tr>
        <td><%= function.name %></td>
        <td><%= function.controller %></td>
        <td><%= function.action %></td>
        <td><%= function.description %></td>
        <td><%= link_to '显示', function , class: "btn active btn-primary btn-sm"%></td>
        <td><%= link_to '编辑', edit_function_path(function) , class: "btn active btn-primary btn-sm"%></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to '新建', new_function_path, class: "btn btn-primary btn-default" %>
