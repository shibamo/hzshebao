<h1>用户列表</h1>

<table class="table table-striped table-condensed">
  <thead>
    <tr>
      <th>姓名</th>
      <th>登录名</th>
      <th>所属部门</th>
      <th>是否有效</th>
      <th>是否公司领导</th>
      <th>是否管理员</th>
      <th>操作</th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.name %></td>
        <td><%= user.logon_name %></td>
        <td><%= user.department ? user.department.name : "未设置" %></td>
        <td><%= user.is_valid ? "是" : "否" %></td>
        <td><%= user.is_leader ? "是" : "否" %></td>
        <td><%= user.is_admin ? "是" : "否" %></td>
        <td><%= link_to '编辑', edit_user_path(user) , class: "btn active btn-primary btn-sm"%>
          <%= link_to '更改密码', user_reset_password_path(user) , class: "btn active btn-danger btn-sm"%></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to '新建用户', new_user_path, class: "btn btn-primary btn-default active" %>
