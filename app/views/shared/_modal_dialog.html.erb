<div class="modal fade" id="modal_<%= object_name %>" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
  <div class="modal-dialog <%= dialog_size_option size_option %>" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
        <h4 class="modal-title text-center" id="modal_label_<%= object_name %>"><%= title %></h4>
      </div>
      <div class="modal-body" id="modal_body_<%= object_name %>">
        <%= image_tag "loading.gif" %><br>正在载入...
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-default" data-dismiss="modal">关闭</button>
      </div>
    </div>
  </div>
</div>

<script type="text/javascript">
$('#modal_<%= object_name %>').on('show.bs.modal', function (event) {
  var source = $(event.relatedTarget) // Source that triggered the modal
  $("#modal_body_<%= object_name %>").html('<h5 class="text-center"> <%= image_tag "loading.gif" %><br>正在载入内容...</h5>');
  var url = source.data('url') // Extract info from data-* attributes
  $( "#modal_body_<%= object_name %>" ).load(url);
})
</script>