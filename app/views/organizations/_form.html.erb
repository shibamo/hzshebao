<%= simple_form_for(@organization) do |f| %>
  <% if @organization.errors.any? %>
    <div id="error_explanation">
      <h2>以下错误发生,无法保存: </h2>
      <ul>
      <%@organization.errors.messages.each do |message|
          message[1].each do |err_msg|%>

        <li> <%=err_msg%> </li>
      <% end %>
      <% end %>
      </ul>
    </div>
  <% end %>
<div class="form-inputs">
  <div class="form-group  col-xs-8">
    <%= f.input :name, label: "机构名称:" %>
  </div>
  <div class="form-group  col-xs-4">
    <%= f.input :abbr , label:"简称" %>
  </div>
  <div class="form-group  col-xs-12">
    <%= f.input :address, label:"地址" %>
  </div>
  <div class="form-group  col-xs-4">
    <%= f.input :person_in_charge, label:"负责人" %>
  </div>
  <div class="form-group  col-xs-4">
    <%= f.input :email, label:"电子邮件" %>
  </div>
  <div class="form-group  col-xs-4">
    <%= f.input :tel, label:"电话" %>
  </div>
  <div class="form-group  col-xs-4">
    <%= f.input :fax, label:"传真" %>
  </div>
  <div class="form-group  col-xs-4">
    <%= f.input :contact_person, label:"联系人" %>
  </div>
  <div class="form-group  col-xs-4">
    <%= f.input :contact_tel, label:"联系电话" %>
  </div>
  <div class="form-group  col-xs-4">
    <%= f.input :contact_fax, label:"联系传真" %>
  </div>
  <div class="form-group  col-xs-4 required ">
    <%= f.label "服务开始日期" %>
    <%= f.text_field :start_date, :class => "dtp form-control required", "data-date-format" => "yyyy-mm-dd" %>
  </div>

  <div class="form-actions col-xs-12">
    <%= f.submit "提 交", class:"actions btn btn-primary noprint" %>
    <%= link_to '返回', organizations_path , class: "btn btn-primary btn-default" %>
  </div>
</div>
<% end %>

<script type="text/javascript">
  $('.dtp').datepicker();
</script>